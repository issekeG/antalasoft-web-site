<div class="container" data-aos="fade-up" data-aos-delay="100">

    <div class="row gy-4">
        {% for article in articles %}

        <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
            <div class="department-card">
                <div class="department-image">
                    <img src="{{ asset('upload/images/articles/' ~ article.image) | imagine_filter('thumbnail_article')}}" alt="{{ article.title }}" class="img-fluid">
                </div>
                <div class="department-content">
                    <h3>{{ article.title }}</h3>
                    <p>
                        {% if article.firstDescription|length > 174 %}
                            {{ (article.firstDescription|slice(0, 174))|raw ~ '...' }}
                        {% else %}
                            {{ article.firstDescription|raw }}
                        {% endif %}
                    </p>

                    <a href="{{ path('app_blog_details', {'slug': article.slug}) }}" class="btn-learn-more">
                        <span>En savoir plus</span>
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        {% endfor %}

    </div>

</div>
