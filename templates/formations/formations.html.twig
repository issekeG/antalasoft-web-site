        </div>

    </div><!-- End Page Title -->

    <!-- Departments Section -->
    <section id="departments" class="departments section pt-2">

        {% include 'sections/formation.html.twig' %}

    </section><!-- /Departments Section -->

  </main>

{% endblock %}
